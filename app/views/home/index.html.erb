	<section class="slice" id="contact">
	  <div class="container">
		<h1 class="noSubtitle">Contact us</h1>
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
			  <% flash.each do |name, msg| %>
				  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
					<a class="close" data-dismiss="alert">x</a>
					<%= msg %>
				  </div>
			  <% end %>
			  <%= simple_form_for @info_request, :html => { :class => 'form-horizontal' } do |f| %>
				  <fieldset>

					<%= f.input :name, :required => true %>
					<%= f.input :email, :required => true %>
					<%= f.input :phone, :required => false %>
					<%= f.input :subject, :required => true %>
					<%= f.input :message, :as => :text, :required => true %>

					<div class="hidden">
					  <%#= f.input :nickname, :hint => 'Leave this field blank!' %> <!--verifies real person -->
					</div>

					<div class="form-actions">
					  <%= f.submit 'Send Message', :class => 'btn btn-primary' %>
					  <%= link_to 'Clear', href: '#contact', :class => 'btn' %>
					</div>

				  </fieldset>
			  <% end %>
			</div>
	  	</div>
	  </div>
	</section>
